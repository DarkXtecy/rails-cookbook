<div class="form-container">
  <h1>Add a Recipe to <%= @category.name %></h1>
  <%= simple_form_for [@category, @bookmark] do |f| %>
    <div class="form-group">
      <%= f.input :recipe_id, collection: @recipes.map { |recipe| [recipe.name, recipe.id] }, prompt: 'Select a recipe', label: "Choose a Recipe" %>
    </div>
    <div class="form-group">
      <%= f.input :comment, placeholder: 'Add a comment (optional)', label: "Comment" %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, 'Add Bookmark', class: "btn btn-orange" %>
    </div>
  <% end %>
  <%= link_to "Back to #{@category.name}", category_path(@category), class: "btn btn-secondary mt-3" %>
</div>
